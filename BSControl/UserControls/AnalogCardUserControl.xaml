<UserControl x:Class="BSControl.UserControls.AnalogCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSControl.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180"
             Background="CadetBlue">
    <Grid Background="Transparent" Margin="2" >
        
        <StackPanel Background="AliceBlue" Margin="8" >
            <Border BorderThickness="0" BorderBrush="Red">
                
            </Border>
            <Label x:Name="CardName" Content="Card Name" /> 
            <TextBlock x:Name="CardValue" FontFamily="Roboto" FontSize="34" HorizontalAlignment="Center" 
                       VerticalAlignment="Center"  Height="42" Width="88" ><Run Text="56.2A"/></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
